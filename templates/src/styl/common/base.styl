// Базовые классы (для тэгов)

@import "../core/variables.styl";

* {
	box-sizing: border-box;
	-webkit-tap-highlight-color: transparent;

	&:before,
	&:after {
		box-sizing: border-box;
	}
}

html {
	font-size: 10px;
	overflow-x: hidden;
}

body {
	font: 1.6rem/1.5 $fontPrimary;
}

a {
  text-decoration: none;
  color: #fff;
}

a, button, input{
	&:focus{
		outline: 0;
	}
}

h1 {
  font-size: 7rem
  text-align center
  text-shadow: .3rem .3rem 1rem $blue
}

h2{
  margin 0
  font-size 4.5rem
  font-weight 600
  line-height 1.3
  text-align center
  color #fff
  text-shadow: .2rem .2rem .5rem $blue
}

p {
  color $grey
  font-size 1.7rem
  font-weight 400
  line-height 2rem
  margin 0
  letter-spacing: -.05rem
}

[type="text/template"] {
	display: none;
}

img{
  width 100%
  height auto
}

.btn {
  margin: 0 auto;
  width: 35rem;
  background: transparent;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 2rem 1rem;
  font-size: 2rem;
  text-transform: uppercase;
  font-weight: 600;
  border-radius: 1rem;
  color: #6673b8;
  border: 0.2rem solid #6673b8;
  background: rgba(255,255,255, .25);
  transition: $fast;
  &:hover{
    color: #fff
    border: 0.2rem solid #fff
    background #6673b8
  }
  &:active{
    color: #fff
    border: 0.2rem solid transparent
    background #6673b8
    box-shadow: 0 0 1.5rem -.5rem #fff
  }
  &__form {
    padding: 0.5rem 1rem;
    font-size: 1.7rem;
    color: #6673b8;
    border: 0.2rem solid #6673b8;
    text-shadow: 0.1rem 0.1rem 0.1rem #6673b8;
    background: transparent;
    border-radius: 0.5rem;
    font-weight: 400;
    width: 70%;
    max-width: 100%;
    margin: 0 auto;
    text-transform: none;
    transition: 0.5s ease-in-out all;
    cursor pointer;
  }
}