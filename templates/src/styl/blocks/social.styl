.social
  background url(../images/content/routes-bg.jpg) center no-repeat
  background-size cover
  padding-bottom 10rem
  &--container
    position relative
  &--heading
    padding-top 12rem
    color #fff
    text-shadow: .2rem .2rem .5rem #000
  &--description
    color: #fff
    text-shadow: 0.1rem 0.1rem 0.1rem #00000050
    text-align: center
    font-size: 2.5rem
    font-weight: 600
    a
      color $blue
      transition $fast
      cursor pointer
      &:hover
        color #ffffff
        text-shadow: 0 0 2rem $blue
  &--wrapper
    display flex
    justify-content center
    align-items center
    width 100%
  &--link
    font-size: 15rem
    margin 0 5rem
    i
      transition: $fast
    &:hover
      color #ee7814
    &__vk
      &:hover
        color #4a76a8