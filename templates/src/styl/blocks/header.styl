@import '../core/variables.styl';

.header
  padding 2rem 0
  position relative
  z-index 2
  height $heightHeader
  color: #fff
  position fixed
  left 0
  right 0
  top 0
  width 100%
  background #ffffff50
  box-shadow: 0 0 1.4rem -0.2rem #000
  &--container
    position relative
  &--login
    position absolute
    right 0
    top -1rem
    color #fff
    text-shadow: 0.2rem 0.2rem 0.5rem #00000080
    i
      margin-right 1rem
      text-shadow: 0 0 0 transparent
  &--nav
    display flex
    justify-content space-between
    align-items center
    &--logo
      width 15rem
    &--menu
      display flex
      justify-content space-between
      align-content: center
      width 55rem
    &--item
      color #fff
      font-weight 600
      text-transform uppercase
      margin 0 auto
      position relative
      text-shadow: 0.2rem 0.2rem 0.5rem #00000080
      font-size: 2rem
  &--phone
    color #fff
    font-weight 600
    text-transform uppercase
    text-shadow: 0.2rem 0.2rem 0.5rem #00000080
    font-size: 2.3rem
    i
      transform: scaleX(-1)
      margin-right 1rem
      text-shadow: 0 0 0 transparent