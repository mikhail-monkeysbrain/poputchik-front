.about
  position relative
  background url(../images/content/s-3.jpg) center no-repeat
  background-size cover
  height auto
  padding: 5rem 0 0
  display flex
  flex-direction: column
  justify-content center
  align-items center
  &__benefits
    background url(../images/content/benefits.jpg) center no-repeat
    background-size cover
    padding-top 10rem
  &--description
    color #fff
    text-shadow: .2rem .2rem .5rem #000
    padding 0
    font-size: 2.3rem
    line-height 1.3
    text-align justify
    letter-spacing: -.08rem
    .tablet &
      width 90%
      margin 0 auto
  &--heading
    color #fff
    text-shadow: .2rem .2rem .5rem #000
    &__description
      color #fff
      text-shadow: .2rem .2rem .5rem #000
      padding 0
      font-size: 3rem
      text-align center
  &--benefits
    display flex
    flex-wrap: wrap
    justify-content space-between
    align-items flex-start
    padding 10rem 0
    .tablet &
      padding 10rem 5rem
    &--header
      display block
      width 100%
      color #fff
      text-shadow: .2rem .2rem .5rem #000
      padding 0
      font-size: 2.3rem
      line-height 1.3
      text-align justify
      letter-spacing: -.08rem
      font-size: 3rem
      text-align center
    &--item
      max-width 20rem
      width 100%
      display flex
      flex-direction: column
      justify-content center
      align-items center
      &--description
        color #ffffff
        font-size: 2rem
        text-shadow: .1rem .1rem .3rem #000
        text-align center
        text-transform uppercase
        font-weight 600
        letter-spacing: initial
        line-height 1.3
      &--image
        width 20rem
        height auto

.flip-container
  cursor pointer
  perspective 1000
  &:hover .flipper
    transform rotateY(180deg)
  .front, .back
    width 30rem
    height 30rem
    border-radius: 50%
  .flipper
    transition 1s ease-in-out all
    transform-style preserve-3d
    position relative
    width 30rem
    height 30rem
    background #ffffff
    border-radius: 50%
    box-shadow: inset 0 0 0 1rem $blue 
  .front, .back
    backface-visibility hidden
    position absolute
    top 0
    left 0
    text-align center
    display flex
    flex-direction: column
    justify-content center
    align-items center
    a
      font-weight 600
      font-size: 2rem
      color $blue
      margin 2rem 0
  .front
    z-index 2
    padding 3rem
    position relative
    display flex
    justify-content center
    align-items center
    p
      font-weight 600
      font-size: 2rem
      position absolute
      left 0
      right 0
      top 13rem
      width 21rem
      height 100%
      margin 0 auto
      tex-shadow .1rem .1rem .3rem #fff
    i
      position relative
      color $blue
      font-size: 15rem
      opacity 0.5
  .back
    transform rotateY(180deg)
  .review
    display flex
    flex-direction: row
    position relative
    overflow hidden
    top -30rem
    border: 1rem solid $blue
    &__instagram
      width 50%
      background #ee7814
      color #ffffff
      transition: $fast
      position absolute
      margin 0 !important
      top 0
      right 0
      width 50%
      height 100%
      padding 0
      display flex
      justify-content center
      align-items center
      i
        color #fff
        font-size: 4rem
        transition: $fast
      p
        opacity 0
        transition: $fast
      &:hover
        p
          opacity 1
        i
          color #ee7814
        background #ffffff
        color #ee7814
    &__vk
      width 50%
      background #4a76a8
      color #ffffff
      transition: $fast
      position absolute
      margin 0 !important
      top 0
      left 0
      width 50%
      height 100%
      padding 0
      display flex
      justify-content center
      align-items center
      i
        color #fff
        font-size: 4rem
        transition: $fast
      p
        opacity 0
        transition: $fast
      &:hover
        p
          opacity 1
        i
          color #4a76a8
        background #ffffff
        color #4a76a8
