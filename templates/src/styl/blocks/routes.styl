.routes
  background url(../images/content/routes-bg.jpg) center no-repeat
  background-size cover
  height: auto
  padding-bottom 10rem
  &--container
    position relative
  &--heading
    padding-top 12rem
    color #fff
    text-shadow: .2rem .2rem .5rem #000
    &__description
      color #fff
      text-shadow: .2rem .2rem .5rem #000
      padding 0
      font-size: 3rem
      text-align center
  &--list
    display flex
    flex-wrap: wrap
    justify-content space-between
    align-items center
    .tablet &
      justify-content space-around
    &--img
      border-radius: 1rem
      .tablet &
        height 40rem
        object-fit: cover
    &--item
      max-width 23%
      position relative
      overflow hidden
      cursor pointer
      margin 1rem 0
      .tablet &
        width 45%
        max-width 45%
      &:hover
        .routes--list--link
          bottom: 5rem
          opacity 1
    &--link
      padding .5rem 1rem
      font-size: 1.7rem
      color #ffffff
      border: .1rem solid #fff
      text-shadow: .1rem .1rem .1rem #6673b8
      background transparent
      border-radius: .5rem
      font-weight 400
      width 70%
      max-width 100%
      margin 0 auto
      text-transform none
      position: absolute
      left: 0
      right: 0
      bottom: -4rem
      opacity 0
      transition: $fast
      .tablet &
        font-size: 2.7rem
        opacity 1
        bottom 5rem
      &:hover
        border: .1rem solid #6673b8
        background rgba(255,255,255 .85)
        color #6673b8
        text-shadow: 0rem 0rem .1rem #000
    &--description
      color #ffffff
      position absolute
      left 0
      top 0
      display flex
      flex-direction: column
      justify-content space-between
      align-items center
      width 100%
      height 100%
      padding 5rem 0
      background rgba(0,0,0, .6)
    &--price
      font-weight 400
      font-size: 3rem
      margin-bottom auto
      span
        margin-bottom auto
        font-size: 4.5rem
        font-weight 600
        margin-right 0.5rem
    &--route
      font-size: 2.5rem
      text-align center
      line-height 1
      margin-bottom 1.5rem