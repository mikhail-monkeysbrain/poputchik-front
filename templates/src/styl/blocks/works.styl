.works
  background #6673b830
  padding-bottom 10rem
  &--container
    position relative
  &--heading
    padding-top 12rem
    color #fff
    text-shadow: .2rem .2rem .5rem #000
  &--description
    color: #000
    text-shadow: 0.1rem 0.1rem 0.1rem #00000050
    text-align: center
    font-size: 2.5rem
    font-weight: 600
  &--items
    display flex
    justify-content space-between
    align-items center
    margin 10rem 0
  &--item
    position relative
    width 33.33rem
    &--number
      font-family: 'Black Ops One', cursive
      font-size: 25rem
      font-weight: 700
      color #6673b8
      line-height: 15rem
      text-shadow: 0 0 1rem #000
      opacity 0.5
      text-align left
      .tablet &
        font-size: 20rem
    &--description
      position absolute
      right 0
      left 0
      bottom 0
      font-size: 2rem
      max-width 13rem
      margin 0 auto
      color: #000
      text-shadow: .1rem .1rem .3rem #fff
      line-height 1
      font-weight 600
      line-height 1.5
      .tablet &
        bottom 2.5rem
    &:nth-child(1)
      p
        left 7rem
        .tablet &
          left 3rem
    &:nth-child(2)
      p
        left 16rem
        .tablet &
          left 11rem
    &:nth-child(3)
      p
        left 17rem
        max-width 14rem
        .tablet &
          left 12rem