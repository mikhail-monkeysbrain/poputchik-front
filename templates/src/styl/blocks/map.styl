.map
  background #6673b830
  margin-top -10rem
  &--img
    filter: blur(.07rem)
  &--container
    position absolute
    left 0
    right 0
    padding-bottom 2rem
    border-radius: 15rem
    box-shadow: inset 0 0 20rem 3rem #fff
    margin-top 5rem
    color #000000
    z-index 1
  &--heading
    color #fff
    text-shadow: .2rem .2rem .5rem #000
    padding 2rem 0 0
  &--description
    .mobile &
      width 80%
      margin 0 auto
    &__heading
      color: #000
      text-shadow: .1rem .1rem .1rem #00000050
      text-align center
      font-size 2.5rem
      font-weight 600
    &__content
      text-align center
      font-size: 2rem
  &--wrapper
    margin-top 10rem